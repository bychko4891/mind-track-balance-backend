{
  "monorepo": true,
  "compilerOptions": {
    "tsConfigPath": "tsconfig.build.json",
    "compiler": "swc"
  },
  "projects": {
    "auth-service": {
      "type": "application",
      "root": "apps/auth-service",
      "sourceRoot": "apps/auth-service/src",
      "entryFile": "main",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-service/tsconfig.build.json"
      }
    },
    "public-content-service": {
      "type": "application",
      "root": "apps/public-content-service",
      "sourceRoot": "apps/public-content-service/src",
      "entryFile": "main",
      "compilerOptions": {
        "tsConfigPath": "apps/public-content-service/tsconfig.build.json"
      }
    },
    "user-service": {
      "type": "application",
      "root": "apps/user-service",
      "sourceRoot": "apps/user-service/src",
      "entryFile": "main",
      "compilerOptions": {
        "tsConfigPath": "apps/user-service/tsconfig.build.json"
      }
    },
    "notification-service": {
      "type": "application",
      "root": "apps/notification-service",
      "sourceRoot": "apps/notification-service/src",
      "entryFile": "main",
      "compilerOptions": {
        "tsConfigPath": "apps/notification-service/tsconfig.build.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}